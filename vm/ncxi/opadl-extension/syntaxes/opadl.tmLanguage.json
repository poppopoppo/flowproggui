{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "OpADL",
	"patterns": [
		{
			"include": "#blk_comments"
		},	
		{ 
			"include": "#line_comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#line_strings"
		},
		{
			"include": "#symbols"
		},
		{
			"include": "#sp_ops"
		},
		{
			"include": "#csts"
		},
		{
			"include": "#im_regs"
		},
		{ 
			"include": "#reg_name"
		}
	],
	"repository": {
		"strings": {
			"name": "string.quoted.double.opadl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.opadl",
					"match": "\\\\."
				}
			]
		},
		"line_strings": {
			"patterns": [
				{
					"name": "string.line.opadl",
					"match": "(`.*\\n?)"
				}
			]
		},
		"symbols": {
			"patterns": [
				{
					"name": "keyword.opadl",
					"match": "(\u00A7\u00A7|\u00A7|\u00B6\u00B6|\u00B6|\u220E\u220E|\u220E\\||\u220E|\u2210\u2210|\u2210\\.#|\u2210\\.\\*|\u2210\\.|\u2210#|\u2210\\*|\u2210|\u00AB|\u00BB|\u22A2\\||\u22A2|(\\.\\s*\\n)|\\!\\||//|:|;|@|#|##|\\\\\\\\|\\\\\\\\\\\\\\\\)"
				}
			]
		},
		"sp_ops": {
			"patterns": [
				{
					"name": "support.class.opadl",
					"match": "(\u27e6|\u27e7|\u25c2\\+\u25c2|\u25c2\u25c2|\u25C2|_\\^|(\\b_\\b)|\\$|=<|=|\\^)"
				},
				{
					"name": "keyword.operator.sp_t.opadl",
					"begin": "'\\[",
					"beginCaptures": {
						"1": {
							"name": "keyword.operator.sp_t.begin"
						}
					},
					"end": "\\]",
					"endCaptures": {
						"1": {
							"name": "keyword.operator.sp_t.end"
						}
					}
			]
		},
		
		"csts": {
			"patterns": [
				{
					"name": "constant.language.opadl",
					"match": "([0-9]+r|[A-Za-z0-9_]+')"
				}
			]
		},
		"im_regs": {
			"name": "keyword.operator.im_reg.opadl",
			"begin": "%\\[",
			"beginCaptures": {
				"1": {
					"name": "keyword.operator.im_reg.begin"
				}
			},
			"end": "\\]",
			"endCaptures": {
				"1": {
					"name": "keyword.operator.im_reg.end"
				}
			},
			"patterns": [
				{
					"include": "#csts"
				},
				{ 
					"include": "#strings" 
				}
			]
	},
	"reg_name": {
		"patterns": [
			{
				"name": "keyword.operator.opadl",
				"match": "(%[A-Za-z_][A-Za-z_0-9]*)"
			}
		]
	},
	"line_comments": {
		"patterns": [
			{
				"name": "comment.line.opadl.slsh",
				"match": "(--.*\\n?)"
			}
		]
	},
	"blk_comments": {
		"name": "comment.blk.opadl",
		"begin": "-\\\\",
		"end": "-/",
		"patterns": [
			{
				"include": "$self"
			}
		]
	}
},
	"scopeName": "source.opadl"
}